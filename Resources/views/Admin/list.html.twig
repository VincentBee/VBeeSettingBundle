{% extends 'VBeeSettingBundle::layout.html.twig' %}

{% block vbee_content %}
    <div class="container">

        <div class="page-header">
            <h1>{{ 'setting_list.title'|trans({}, 'VBeeSettingBundle') }}</h1>
        </div>

        <p>
            <a class="btn btn-primary btn-small" href="{{ path('vbee_setting_admin_create') }}">
                {{ 'setting_list.create'|trans({}, 'VBeeSettingBundle') }}
            </a>
        </p>
        <table class="table table-hover">
            {% for setting in settings %}
                <tr>
                    <td style="width: 20%;">{{ setting.name }}</td>
                    <td style="width: 60%;">{{ setting.value }}</td>
                    <td style="width: 20%; text-align: right">
                        <a class="btn btn-primary btn-small" href="{{ path('vbee_setting_admin_edit', {'id': setting.id}) }}">
                            {{ 'setting_list.edit'|trans({}, 'VBeeSettingBundle') }}
                        </a>
                        <a class="btn btn-danger btn-small" href="{{ path('vbee_setting_admin_remove', {'id': setting.id}) }}">
                            {{ 'setting_list.delete'|trans({}, 'VBeeSettingBundle') }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}